<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SandwichActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$0.00"
            android:id="@+id/moneyView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specials"
            android:id="@+id/buttonSpecials"
            android:layout_below="@+id/moneyView"
            android:layout_marginTop="11dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:onClick="spec"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:id="@+id/buttonBreakfast"
            android:layout_below="@+id/buttonSpecials"
            android:layout_alignLeft="@+id/buttonSpecials"
            android:layout_alignRight="@+id/buttonSpecials"
            android:onClick="breakfast"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty Sandwiches"
            android:id="@+id/buttonSpecialty"
            android:layout_below="@+id/buttonBreakfast"
            android:layout_alignLeft="@+id/buttonBreakfast"
            android:layout_alignRight="@+id/buttonBreakfast"
            android:onClick="specSand"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Ons"
            android:id="@+id/buttonAddOns"
            android:layout_below="@+id/buttonSpecialty"
            android:layout_alignLeft="@+id/buttonSpecialty"
            android:layout_alignRight="@+id/buttonSpecialty"
            android:onClick="addOn"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grab &amp; Go"
            android:id="@+id/buttonGrabNGo"
            android:layout_below="@+id/buttonAddOns"
            android:layout_alignLeft="@+id/buttonAddOns"
            android:layout_alignRight="@+id/buttonAddOns"
            android:onClick="grab"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:id="@+id/buttonAll"
            android:layout_below="@+id/buttonGrabNGo"
            android:layout_alignLeft="@+id/buttonGrabNGo"
            android:layout_alignRight="@+id/buttonGrabNGo"
            android:onClick="all"/>
</RelativeLayout>
