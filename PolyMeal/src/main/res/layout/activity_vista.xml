<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RestaurantActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specials"
            android:id="@+id/specials"
            android:onClick="spec"
            android:layout_below="@+id/money"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandwich Stop"
            android:id="@+id/sand"
            android:layout_below="@+id/specials"
            android:layout_alignLeft="@+id/specials"
            android:layout_alignRight="@+id/specials"
            android:onClick="sand"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chopstix"
            android:id="@+id/chop"
            android:layout_below="@+id/sand"
            android:layout_alignLeft="@+id/sand"
            android:layout_alignRight="@+id/sand"
            android:onClick="chop"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caliente"
            android:id="@+id/cali"
            android:layout_below="@+id/chop"
            android:layout_alignLeft="@+id/chop"
            android:layout_alignRight="@+id/chop"
            android:onClick="cali"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cagie Moons"
            android:id="@+id/cagie"
            android:layout_below="@+id/cali"
            android:layout_alignLeft="@+id/cali"
            android:layout_alignRight="@+id/cali"
            android:onClick="cagie"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bella Pasta"
            android:id="@+id/bella"
            android:layout_below="@+id/cagie"
            android:layout_alignLeft="@+id/cagie"
            android:layout_alignRight="@+id/cagie"
            android:onClick="bella"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miscellaneous"
            android:id="@+id/misc"
            android:layout_below="@+id/bella"
            android:layout_alignLeft="@+id/bella"
            android:layout_alignRight="@+id/bella"
            android:onClick="misc"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:id="@+id/all"
            android:layout_below="@+id/misc"
            android:layout_alignLeft="@+id/misc"
            android:layout_alignRight="@+id/misc"
            android:onClick="all"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:id="@+id/money"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

</RelativeLayout>
