<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome."
            android:id="@+id/welcomeText"
        android:layout_marginTop="15dp"
            android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_sandwich"
            android:id="@+id/buttonSand"
        android:onClick="sandwich"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/selectText"
        android:layout_alignRight="@+id/welcomeText"
        android:layout_alignLeft="@+id/welcomeText" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_vg"
            android:id="@+id/buttonVista"
        android:onClick="vg"
        android:layout_below="@+id/buttonSand"
        android:layout_alignLeft="@+id/buttonSand"
        android:layout_alignRight="@+id/buttonSand" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Select a Meal Location:"
            android:id="@+id/selectText"
            android:textSize="20dp"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Retrieving Menu Data..."
            android:id="@+id/textDownload"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_taco"
        android:id="@+id/buttonTaco"
        android:layout_below="@+id/buttonVista"
        android:layout_alignRight="@+id/buttonVista"
        android:layout_alignLeft="@+id/buttonVista"
        android:onClick="taco" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/buttonTaco"
        android:layout_alignRight="@+id/buttonTaco"
        android:layout_alignLeft="@+id/buttonTaco"
        android:text="@string/title_activity_bagel"
        android:onClick="bagel" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
