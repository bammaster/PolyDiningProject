<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_centerInParent="true" android:layout_toLeftOf="@+id/textView"
                android:layout_marginRight="4dp"
                android:src="@drawable/alert"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There are no items in your cart"
                android:id="@+id/textView" android:layout_alignParentTop="false" android:layout_centerInParent="true"
                android:textSize="8pt"/>
    </RelativeLayout>